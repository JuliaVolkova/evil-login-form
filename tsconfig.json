{
  "compilerOptions": {
    "target": "ES2020",
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "sourceMap": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "build"]
}
